<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
   	android:background="#FFFFFF"
    android:weightSum="10" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
             android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#4e5860"
            android:layout_marginTop="40dp"
            android:text="Are You Sure You Want To Delete ?"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="47dp"
            android:background="@drawable/yes" />

        <Button
            android:id="@+id/delete_no"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
             android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/delete_yes"
            android:background="@drawable/no" />

   </RelativeLayout>