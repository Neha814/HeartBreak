<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#98a4af"
        android:orientation="vertical" >

        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
             android:textColor="#ffffff"
            android:background="#98a4af"
            android:paddingTop="15dp"
            android:textSize="15dp"
             android:layout_marginLeft="30dp"
            android:text="GENERAL ACCOUNT SETTING"
            android:textStyle="bold" />
        
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="2dp"
           android:layout_below="@+id/textView1"
            android:background="#98a4af"></LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL1"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/change_pro_pic"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="33dp"
            android:text="Password"
            android:textColor="#4e5860"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/username"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/password"
            android:layout_marginTop="32dp"
            android:background="@drawable/editicon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:textColor="#4e5860"
            android:layout_toLeftOf="@+id/pro_pic"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/currentUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/username"
            android:layout_alignBottom="@+id/username"
            android:layout_marginLeft="27dp"
            android:textColor="#4e5860"
            android:layout_toLeftOf="@+id/username"
            android:layout_toRightOf="@+id/textView5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Button
            android:id="@+id/password"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"
            android:background="@drawable/editicon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="35dp"
        android:textColor="#4e5860"
        android:text="Delete Account"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/delete_account"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/delete_icon" />

</RelativeLayout>